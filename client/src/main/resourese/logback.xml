<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriol="60" debug="false">
    <!-- ch.qos.logback.core.ConsoleAppender 控制台输出 -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cyan(%d{yyyy-MM-dd HH:mm:ss.SSS}) %boldMagenta([%thread]) %-5level %magenta(%logger{50}) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.jdragon.tljrobot.client" level="debug" />

    <!-- 日志级别 -->
    <root>
        <level value="info" />
        <appender-ref ref="console" />
    </root>
</configuration>